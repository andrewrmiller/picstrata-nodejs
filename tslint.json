{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "ordered-imports": true,
    "quotemark": false,
    "trailing-comma": false,
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false
  }
}
